- provide(:title, 'Reset password')

- flash.each do |name, msg|
  - if msg.is_a?(String)
    = content_tag :div, msg, :class => "flash_#{name}"

.row
  %h1 Reset Password
  #reset-password-form.reset-password-form
    = form_for(@user, url: password_reset_path(params[:id])) do |f|
      
      = hidden_field_tag :email, @user.email
      = hidden_field_tag :token, @token
      = f.password_field :password, required: true, placeholder: 'Enter password', class: 'form-control'
      = f.password_field :password_confirmation, required: true, placeholder: 'Confirm password',class: 'form-control'
      
      = f.submit "Update password", id: "reset-password-form-button"
