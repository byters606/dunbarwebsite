= content_for(:title, "Edit group info")
- if logged_in? && current_user_admin?
  .row
    %h1 Edit Group Info
    #edit-group-info-form.edit-group-info-form
      = form_tag group_info_path(@group_info), :method => :put, multipart: true do
        = text_field_tag :title, @group_info.title, :class => 'entry', :placeholder => "Group info title", :required => true

        = label_tag :file, "Please provide a file for the group info"
        = file_field_tag :file, :class => 'entry'
        
        = label_tag :category, 'Please select the category of the group info file'
        = select_tag :category, options_for_select(@categories, @group_info.category), :class => 'entry', :id => "category-selector"

        = submit_tag 'Update Group Info', :id => 'group-info-form-button'

- else
  %p Only users with privileges can add new publications
