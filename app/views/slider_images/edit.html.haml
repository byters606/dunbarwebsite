= content_for(:title, "Edit slide")
- if logged_in? && current_user_admin?
  .row
    %h1 Edit Slide
    #edit-slider_image-form.edit-slider_image-form
      = form_tag slider_image_path(@sliderImage), :method => :put, multipart: true do
        = text_field_tag :title, @sliderImage.title , :class => 'entry', :placeholder => 'Please enter the title for the slider item'
        = text_area_tag :content, @sliderImage.content, :class => 'entry', :placeholder => 'Description'
        = text_field_tag :link, @sliderImage.link, :class => 'entry', :placeholder => 'Link'
        
        = label_tag :slider_image_picture, 'Please provide an image to the slider_image'
        = file_field_tag :slider_image_picture, :class => 'entry'
        
        = submit_tag 'Save Slide', :id => 'slider_image_form_button'
- else
  %p Only users with privileges can edit slider_images.
