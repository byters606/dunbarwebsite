= content_for(:title, "Edit Collaboration")
- if logged_in? && current_user_admin?
  .row
    %h1 Edit Collaboration
    #edit-collaboration-form.edit-collaboration-form
      = form_tag collaboration_path(@collaboration), :method => :put, multipart: true do

        = text_field_tag :researcher, @collaboration.researcher, :class => 'entry', :placeholder => 'Researcher name', :required => true
        = text_field_tag :link, @collaboration.link, :class => 'entry', :placeholder => 'Collaboration website', :required => true
        = text_field_tag :affiliation, @collaboration.affiliation, :class => 'entry', :placeholder => 'Affiliation', :required => true
        = text_area_tag :description, @collaboration.description, :class => 'entry', :placeholder => 'Please provide a brief description of this collaboration', :required => true
  
        = label_tag :collaboration_picture, 'Please provide an image for the collaboration' 
        = file_field_tag :collaboration_picture, :class => 'entry'

        = submit_tag 'Update Collaboration', :id => 'collaboration-form-button'
- else
  %p Only users with privileges can edit publications.
