= content_for(:title, "Home")

- flash.each do |name, msg|
  - if msg.is_a?(String)
    = content_tag :div, msg, :class => "flash_#{name}"

.homepage-content
  .slider-wrapper
    .cycle-slideshow.slider{"data-cycle-fx" => "scrollHorz", "data-cycle-pager" => "> .cycle-pager",
      "data-cycle-slides" => ".innerWrapper", "data-cycle-timeout" => "5000"}
      .cycle-pager
      - @sliderImages.each.with_index do |slider_image, index|
        .innerWrapper{"data-cycle-title" => slider_image.title}
          .slider-table
            .slider-row
              .slider-image
                %img.slide1img{:src => slider_image.slider_image_picture}
              .slider-content-wrapper
                .slider-title
                  %p.slide2text #{slider_image.title}
                .slider-content
                  %p.slide2text #{slider_image.content}
                .box-btn
                  = link_to "More", slider_image.link, :target => '_blank'
  -if logged_in? && current_user_admin?
    .box-btn.manage-slides
      = link_to "Manage Slides", slider_images_path, :title => "Manage slides"
  .news-aboutus-sponsor
    .aboutus-sponsor
      .aboutus-map
        .aboutus
          %h2 About us
          %p
            Research in the Dunbar Research Group spans a number of topics in synthetic and structural inorganic
            chemistry with a focus on problems at the interface of materials and biological chemistry. The combined
            use of many physical techniques (electronic epr, infrared spectroscopies, X-ray crystallography, ac and 
            dc magnetic magnetometry, scanning and transmission electron microscopy, mass spectrometry and
            electrochemistry to name a subset) reflect the breadth of problems under investigation. Our aim is to 
            define important synthetic challenges and tackle their solution with an arsenal of physical, chemical 
            and spectroscopic data. We are devoted to the use of coordination chemistry as a tool to make new compounds
            as well as to probe new structure and bonding relationships.
        .map-members
          %h2 Members from all over the world!
          #map
          %script{:async => "", :defer => "defer", :src => "https://maps.googleapis.com/maps/api/js?key=AIzaSyCjL_hHqsaDzpcmNm7mKAstTKkqDMgbp_o&callback=initMap"}
      .sponsor
        %h2 Supporting our research over the years
        .icons-container
          .icon-wrapper
            = link_to image_tag("sponsors/ACS.png"), 'http://www.acs.org/', :target => "blank"
          .icon-wrapper
            = link_to image_tag("sponsors/DE.png"), 'http://www.energy.gov/', :target => 'blank'
          .icon-wrapper
            = link_to image_tag("sponsors/welch.png"), 'http://www.welch1.org/', :target => 'blank'
          .icon-wrapper
            = link_to image_tag("sponsors/NIH.png"), 'www.nih.gov', :target => 'blank'
          .icon-wrapper
            = link_to image_tag("sponsors/NSF.png"), 'http://www.nsf.gov/', :target => 'blank'
    .news    
      %h2 News
      - New.getTopNews.each do |announcement|
        .news-item
          .news-title
            %strong
              = announcement.title
          .news-content
            = announcement.content.html_safe
          .news-date
            %p
              = announcement.created_at
      .more-news
        = link_to "Read More", announcements_path, :class => 'yellow-box-link'